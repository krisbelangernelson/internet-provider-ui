{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2022",
      "dom"
    ],
    "jsx": "react-jsx",
    "module": "esnext",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": [
    "config",
    "coverage",
    "dist"
  ]
}